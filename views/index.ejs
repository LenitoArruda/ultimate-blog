<%- include ('./partials/header.ejs') %>
<%- include ('./partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Welcome!</h1>
            <p class="lead">This is the Ultimate Blog</p>
            <hr class="my-4">
            <p>Description.</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </div>
        <br>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/ultimateblog/<%= article.slug %>" class="btn btn-success">Read article</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a href="/ultimateblog/articles/page/2" style="float: right;">Next Page >></a>
            </div>
            <hr>
        </div>
    </div>
</body>
