<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Articles</h2>
    <hr>
    <a class="btn btn-success" href="/admin/ultimateblog/articles/new">Create new Article</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <th>
                        <a href="/admin/ultimateblog/articles/<%= article.id %>" class="btn btn-warning">Edit</a>
                        <form method="POST" action="/admin/ultimateblog/articles/delete" style="display: inline" onsubmit="deletionConfirm(event,this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <input type="hidden" name="title" value="<%= article.title %>">
                            <button class="btn btn-danger">Delete</button>
                        </form> 
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>
<script>
    function deletionConfirm(event, form){
        event.preventDefault();
        const decision = confirm("Do you want to delete this Article?");
        if(decision){
            form.submit();
        }
    }
</script>