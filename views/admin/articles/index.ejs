<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Articles</h2>
    <hr>
    <a class="btn btn-success" href="/admin/ultimateblog/articles/new">Create new Article</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(articles => { %>
                <tr>
                    <td><%= articles.id %></td>
                    <td><%= articles.title %></td>
                    <td><%= articles.slug %></td>
                    <td><%= articles.category.title %></td>
                    <td>Actions</td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>
<script>
    function deletionConfirm(event, form){
        event.preventDefault();
        const decision = confirm("Do you want to delete this category?");
        if(decision){
            form.submit();
        }
    }
</script>