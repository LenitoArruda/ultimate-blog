<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Users</h2>
    <hr>
    <a class="btn btn-success" href="/admin/ultimateblog/users/new">Create new User</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>User name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <th><%= user.id %></th>
                    <th><%= user.userName %></th>
                    <th><%= user.email %></th>
                    <th>
                        <a href="/admin/ultimateblog/users/edit/<%= user.id %>" class="btn btn-warning">Edit</a>
                        <form method="POST" action="/admin/ultimateblog/users/delete" style="display: inline" onsubmit="deletionConfirm(event,this)">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button class="btn btn-danger">Delete</button>
                        </form> 
                        
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>
<script>
    function deletionConfirm(event, form){
        event.preventDefault();
        const decision = confirm("Do you want to delete this user?");
        if(decision){
            form.submit();
        }
    }
</script>